<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.charles.dao.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.charles.entity.User">
        <result column="id" property="id" />
        <result column="created" property="created" />
        <result column="updated" property="updated" />
        <result column="statu" property="statu" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="avatar" property="avatar" />
        <result column="email" property="email" />
        <result column="city" property="city" />
        <result column="last_login" property="lastLogin" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        created,
        updated,
        statu,
        username, password, avatar, email, city, last_login
    </sql>
    <select id="getNavMenuIds" resultType="java.lang.Long">
        SELECT DISTINCT t1.menu_id
        FROM sys_role_menu t1
        JOIN sys_user_role t2
        ON t1.role_id=t2.role_id
        WHERE t2.user_id=#{userId}
    </select>
    <select id="listByMenuId" resultType="com.charles.entity.User">
        SELECT DISTINCT t3.username,t3.id
        FROM sys_role_menu t1
        JOIN sys_user_role t2
        ON t1.role_id=t2.role_id
        JOIN sys_user t3
        ON t2.role_id=t3.id
        WHERE t1.menu_id=#{menuId}
    </select>

</mapper>
